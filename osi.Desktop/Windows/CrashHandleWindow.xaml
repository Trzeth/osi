<Window x:Class="osi.Desktop.Windows.CrashHandleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:osi.Desktop.Windows"
        mc:Ignorable="d"
        Title="CrashHandleWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBox Grid.Row="0" 
                     Margin="10" 
                     x:Name="ExpectionTextBox" 
                     IsReadOnly="True"/>

            <StackPanel Grid.Row="1">
                <TextBlock FontSize="50" HorizontalAlignment="Center">OSI 遇到了无法处理的错误</TextBlock>
                <TextBlock FontSize="30" HorizontalAlignment="Center" Margin="0,10,0,0">如果该情况持续出现，请保存以上信息</TextBlock>
                <TextBlock FontSize="30" HorizontalAlignment="Center">通过贴吧或QQ等方式进行反馈</TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
